<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- 普通主题 -->
    <style name="AppTheme.Normal" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColorNormal</item>
        <item name="colorPrimaryLight">@color/primaryColorLightNormal</item>
        <item name="colorPrimaryDark">@color/primaryColorDarkNormal</item>

        <item name="colorSecondary">@color/secondaryColorNormal</item>
        <item name="colorSecondaryLight">@color/secondaryColorLightNormal</item>
        <item name="colorSecondaryDark">@color/secondaryColorDarkNormal</item>

        <item name="colorAccent" tools:ignore="PrivateResource">?attr/colorSecondary</item>

        <item name="colorPrimaryText">@color/primaryTextColorNormal</item>
        <item name="colorSecondaryText">@color/secondaryTextColorNormal</item>
        <item name="colorNavigationIcon">@color/navigationIconColorNormal</item>

        <item name="colorLine">@color/lineColorNormal</item>

        <item name="expandedTitleTextAppearance">@style/TextAppearance.Adaptive.Headline5</item>
    </style>


    <!-- 夜间主题 -->
    <style name="AppTheme.Night" parent="AppTheme.DayNight">

        <item name="colorPrimary">@color/primaryColorNight</item>
        <item name="colorPrimaryLight">@color/primaryColorLightNight</item>
        <item name="colorPrimaryDark">@color/primaryColorDarkNight</item>

        <item name="colorSecondary">@color/secondaryColorNight</item>
        <item name="colorSecondaryLight">@color/secondaryColorLightNight</item>
        <item name="colorSecondaryDark">@color/secondaryColorDarkNight</item>

        <item name="colorAccent" tools:ignore="PrivateResource">?attr/colorSecondary</item>

        <item name="colorPrimaryText">@color/primaryTextColorNight</item>
        <item name="colorSecondaryText">@color/secondaryTextColorNormal</item>
        <item name="colorNavigationIcon">@color/navigationIconColorNormal</item>

        <item name="colorLine">@color/lineColorNight</item>

        <item name="expandedTitleTextAppearance">@style/TextAppearance.Adaptive.Headline5</item>

    </style>
    
</resources>