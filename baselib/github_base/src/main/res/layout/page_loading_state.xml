<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.tangpj.paging.PageLoadState"/>
        <import type="com.tangpj.paging.PageLoadStatus"/>
        <import type="com.tangpj.recurve.resource.Status"/>
        <import type="kotlin.Unit"/>
        <import type="kotlin.jvm.functions.Function0"/>

        <variable name="callback" type="Function0&lt;Unit>"/>
        <variable name="pageLoadState" type="PageLoadState"/>

    </data>
    <LinearLayout android:orientation="vertical"
        app:visibleGone="@{ (pageLoadState.status == PageLoadStatus.REFRESH) &amp;&amp; (pageLoadState.networkState.status != Status.SUCCESS) }"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:padding="@dimen/padding_horizontal_material"
        android:layout_height="wrap_content">
        <ProgressBar
            app:visibleGone="@{pageLoadState.networkState.status == Status.LOADING}"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar"
            android:layout_margin="@dimen/padding_horizontal_material"/>
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retry"
            android:id="@+id/retry"
            android:onClick="@{() -> callback.invoke()}"
            app:visibleGone="@{pageLoadState.networkState.status == Status.ERROR}"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/error_msg"
            android:text="@{pageLoadState.networkState.msg ?? @string/unknown_error}"
            app:visibleGone="@{pageLoadState.networkState.status == Status.ERROR}"
            tools:visibility="visible"/>
    </LinearLayout>
</layout>

